rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules untuk collection users
    match /users/{userId} {
      // User dapat membaca dan menulis data mereka sendiri
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User dapat membuat dokumen mereka sendiri saat pertama kali mendaftar
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // User dapat update dokumen mereka sendiri
      allow update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Tambahkan rules untuk collections lain sesuai kebutuhan
    // Contoh: jika ada collection lain yang perlu diakses
    match /{document=**} {
      // Default: deny all access
      allow read, write: if false;
    }
  }
}


